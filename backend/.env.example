# Example .env for Smart Campus backend
# Embedding model (sentence-transformers)
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Generation model for QA (use a text2text seq2seq model)
HF_GENERATION_MODEL=google/flan-t5-base

# Optional HF Hub token if using private models
HF_HUB_TOKEN=

# Pinecone credentials (if using Pinecone)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=smart-campus-index

# Other optional settings
EMBEDDING_BATCH_SIZE=100
MAX_CONTEXT_LENGTH=3000
